<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/title_bg">


    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/font_size_20"
        android:text="TITLE"
        android:textColor="@color/red"/>
    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_alignTop="@id/title_title"
        android:layout_alignBottom="@id/title_title"
        android:src="@drawable/select_title_arr"/>
    <TextView
        android:id="@+id/title_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/red"
        android:visibility="gone"
        android:layout_marginRight="@dimen/margin_h"/>
    <hhh.appstudy.view.CircleImageView
        android:id="@+id/title_img_right"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:src="@drawable/unlogin"
        android:padding="8dp"
        android:visibility="gone"
        app:cv_outstroke="1dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>