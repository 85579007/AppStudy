<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/title_bg">
        <EditText
            android:id="@+id/select_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_20"
            android:text="TITLE"
            android:textColor="@color/red"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_toRightOf="@+id/select_back"
            android:layout_toLeftOf="@+id/select_searchbtn"
            android:background="@drawable/shape_stroke_red"/>
        <ImageView
            android:id="@+id/select_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_alignBottom="@id/select_title"
            android:layout_alignTop="@id/select_title"
            android:src="@drawable/select_title_arr"/>
        <ImageView
            android:id="@id/select_searchbtn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_alignBottom="@id/select_title"
            android:layout_alignTop="@id/select_title"
            android:background="@drawable/search_black"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/select_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:scrollbars="none"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@color/grey"/>
</LinearLayout>